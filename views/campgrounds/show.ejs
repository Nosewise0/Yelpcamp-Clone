<% layout('layout/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css" />

<div class="container py-5">
  <div class="row g-4">
    <!-- Left Column: Carousel and Main Info -->
    <div class="col-lg-7">
      <!-- Carousel with enhanced styling -->
      <div id="campgroundCarousel" class="carousel slide mb-4 rounded-4 overflow-hidden shadow-lg" data-bs-ride="carousel">
        <div class="carousel-inner">
          <% campground.image.forEach((img, i)=> { %>
            <div class="carousel-item <%= i === 0 ? 'active' : ''%>" style="height: 400px;">
              <img src="<%= img.url  %>" class="d-block w-100 h-100 object-fit-cover" alt="">
            </div>
          <% }) %>
        </div>
        <% if (campground.image.length > 1) { %>
          <button class="carousel-control-prev" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#campgroundCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        <% } %>
      </div>

      <!-- Main Info Card -->
      <div class="card border-0 shadow-lg rounded-4 mb-4">
        <div class="card-body p-4">
          <h1 class="card-title mb-3 text-primary fw-bold"><%= campground.title%></h1>
          <p class="card-text text-muted fs-5 lh-lg"><%= campground.description %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item border-0 ps-4 py-3">
            <i class="bi bi-geo-alt-fill text-danger"></i>
            <strong class="ms-2"><%= campground.location %></strong>
          </li>
          <li class="list-group-item border-0 ps-4 py-3">
            <i class="bi bi-person-circle text-info"></i>
            <strong class="ms-2">Submitted by <%= campground.author?.username || "Unknown" %></strong>
          </li>
          <li class="list-group-item border-0 ps-4 py-3 pb-0">
            <i class="bi bi-cash-coin text-success"></i>
            <h4 class="d-inline ms-2 text-success">$<%= campground.price %>/night</h4>
          </li>
        </ul>

        <!-- Edit/Delete Buttons -->
        <% if (currentUser && campground.author && campground.author._id.equals(currentUser._id)) { %>
          <div class="card-body pt-4 d-flex gap-2">
            <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-lg btn-warning rounded-pill px-4">
              <i class="bi bi-pencil-square"></i> Edit Campground
            </a>
            <form class="d-inline" action="/campgrounds/<%= campground._id%>?_method=DELETE" method="POST">
              <button class="btn btn-lg btn-danger rounded-pill px-4">
                <i class="bi bi-trash3"></i> Delete
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </div>

    <!-- Right Column: Map and Reviews -->
    <div class="col-lg-5">
      <!-- Map -->
      <div class="card border-0 shadow-lg rounded-4 mb-4">
        <div id="map" style="width: 100%; height: 350px; border-radius: 1rem;"></div>
      </div>

      <!-- Review Form -->
      <% if (currentUser){ %>
        <div class="card border-0 shadow-lg rounded-4 mb-4">
          <div class="card-header bg-primary text-white border-0 rounded-top-4 p-4">
            <h4 class="mb-0"><i class="bi bi-chat-left-quote"></i> Leave a Review</h4>
          </div>
          <div class="card-body p-4">
            <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="needs-validation" novalidate>
              <!-- Rating Stars -->
              <div class="mb-4">
                <label class="form-label fw-bold mb-3">Your Rating</label>
                <fieldset class="starability-basic">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>

              <!-- Review Text -->
              <div class="mb-4">
                <label class="form-label fw-bold" for="body">Your Review</label>
                <textarea class="form-control form-control-lg rounded-3 border-2" name="review[body]" id="body" cols="30" rows="5" placeholder="Share your experience..." required></textarea>
              </div>

              <button class="btn btn-success btn-lg w-100 rounded-pill">
                <i class="bi bi-send-fill"></i> Submit Review
              </button>
            </form>
          </div>
        </div>
      <% } %>

      <!-- Reviews List -->
      <div>
        <h5 class="mb-3 fw-bold text-dark">Reviews (<%= campground.reviews.length %>)</h5>
        <% if (campground.reviews.length === 0) { %>
          <div class="alert alert-info rounded-4" role="alert">
            No reviews yet. Be the first to review this campground!
          </div>
        <% } else { %>
          <% for(let review of campground.reviews) {%>
            <div class="card border-0 shadow-sm rounded-4 mb-3 transition" style="cursor: pointer;">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="card-title mb-0">
                    <i class="bi bi-person-circle text-muted"></i>
                    <strong class="ms-2"><%= review.author.username %></strong>
                  </h5>
                  <% if(currentUser && review.author.equals(currentUser._id)) { %>
                    <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" style="display: inline;">
                      <button class="btn btn-sm btn-danger rounded-pill">
                        <i class="bi bi-trash3"></i> Delete
                      </button>
                    </form>
                  <% } %>
                </div>
                <p class="starability-result mb-2" data-rating="<%= review.rating %>">
                  <span class="badge bg-warning text-dark">â˜… <%= review.rating %>/5</span>
                </p>
                <p class="card-text text-muted"><%= review.body %></p>
              </div>
            </div>
          <% } %>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%-"<script>"%>
  const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
  const campground = <%- JSON.stringify(campground) %>;
<%-"</script>"%>

<script src="/javascripts/showPageMap.js"></script>