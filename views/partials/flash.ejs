<% if(typeof success !== 'undefined' && success.length) {%>
  <div class="alert alert-success alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert" style="background: linear-gradient(135deg, rgba(25, 135, 84, 0.1) 0%, rgba(25, 135, 84, 0.05) 100%); border-left: 4px solid #198754;">
    <div class="d-flex align-items-center gap-3">
      <div style="font-size: 1.5rem;">
        <i class="bi bi-check-circle-fill text-success"></i>
      </div>
      <div class="flex-grow-1">
        <strong class="text-success">Success!</strong>
        <div class="text-dark small mt-1"><%= success %></div>
      </div>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  </div>
<%}%>

<% if(typeof error !== 'undefined' && error.length) {%>
  <div class="alert alert-danger alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert" style="background: linear-gradient(135deg, rgba(220, 53, 69, 0.1) 0%, rgba(220, 53, 69, 0.05) 100%); border-left: 4px solid #dc3545;">
    <div class="d-flex align-items-center gap-3">
      <div style="font-size: 1.5rem;">
        <i class="bi bi-exclamation-circle-fill text-danger"></i>
      </div>
      <div class="flex-grow-1">
        <strong class="text-danger">Something went wrong!</strong>
        <div class="text-dark small mt-1"><%= error %></div>
      </div>
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
    </div>
  </div>
<%}%>

<style>
  .alert {
    animation: slideInDown 0.4s ease;
  }

  @keyframes slideInDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .alert .btn-close {
    transition: all 0.3s ease;
  }

  .alert .btn-close:hover {
    opacity: 0.7;
  }

  .alert .bi {
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }
</style>