<% layout('layout/boilerplate') %>

<div class="login-page min-vh-100 d-flex align-items-center justify-content-center py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-10 col-md-8 col-lg-6">
        <div class="card login-card shadow-lg overflow-hidden rounded-4">
          <!-- Header -->
          <div class="card-header header-gradient text-white d-flex align-items-center justify-content-between">
            <div>
              <h3 class="mb-0 fw-bold"><i class="bi bi-key-fill me-2"></i> Welcome Back</h3>
              <small class="opacity-75">Sign in to your YelpCamp account</small>
            </div>
            <a href="/" class="btn btn-sm btn-light text-primary rounded-pill">
              <i class="bi bi-house-door-fill"></i> Home
            </a>
          </div>

          <!-- Body -->
          <div class="card-body p-4 p-sm-5 bg-white">
            <form id="loginForm" action="/login" method="POST" novalidate>
              <!-- Username -->
              <div class="mb-3">
                <label for="username" class="form-label fw-semibold">Username</label>
                <div class="input-group input-group-lg">
                  <span class="input-group-text bg-white border-2"><i class="bi bi-person-fill text-primary"></i></span>
                  <input id="username" name="username" type="text" class="form-control border-2 form-control-lg" placeholder="your username" required autofocus>
                  <div class="invalid-feedback">Please enter your username.</div>
                </div>
              </div>

              <!-- Password -->
              <div class="mb-3 position-relative">
                <label for="password" class="form-label fw-semibold">Password</label>
                <div class="input-group input-group-lg">
                  <span class="input-group-text bg-white border-2"><i class="bi bi-lock-fill text-danger"></i></span>
                  <input id="password" name="password" type="password" class="form-control border-2 form-control-lg" placeholder="Enter your password" required>
                  <button id="togglePassword" type="button" class="btn btn-outline-secondary border-2" aria-label="Toggle password visibility">
                    <i class="bi bi-eye"></i>
                  </button>
                  <div class="invalid-feedback">Please enter your password.</div>
                </div>
              </div>

              <!-- Remember & Forgot -->
              <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check mb-0">
                  <input class="form-check-input" type="checkbox" value="" id="remember" name="remember">
                  <label class="form-check-label" for="remember">Remember me</label>
                </div>
                <a href="#" class="small text-decoration-none">Forgot password?</a>
              </div>

              <!-- Submit -->
              <div class="d-grid mb-3">
                <button id="submitBtn" class="btn btn-gradient btn-lg rounded-pill fw-bold" type="submit">
                  <i class="bi bi-box-arrow-in-right me-2"></i> Sign In
                </button>
              </div>

              <!-- Divider -->
              <div class="text-center mb-3">
                <small class="text-muted">or</small>
              </div>

              <!-- Social (placeholder) -->
              <div class="d-grid gap-2 mb-3">
                <button class="btn btn-outline-secondary btn-lg rounded-pill" type="button" disabled>
                  <i class="bi bi-google me-2"></i> Continue with Google
                </button>
              </div>

              <div class="text-center">
                <small class="text-muted">Don't have an account? <a href="/register" class="fw-semibold text-decoration-none">Create one</a></small>
              </div>
            </form>
          </div>
        </div>

        <p class="text-center text-muted mt-4 small">
          <i class="bi bi-shield-check me-1"></i>Your account is secure.
        </p>
      </div>
    </div>
  </div>
</div>